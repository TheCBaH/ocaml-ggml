// For format details, see https://aka.ms/devcontainer.json.
{
    "name": "ocaml devcontainers examples",
    "build":  {
        "dockerfile": "Dockerfile",
        "cacheFrom": [
            "ghcr.io/thecbah/ocaml-devcontainer/devcontainer:master"
        ]
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": "true",
            "username": "vscode",
            "userUid": "1000",
            "userGid": "1000",
            "upgradePackages": "false"
        },
        "ghcr.io/devcontainers/features/node:1": {},
        "./features/playwright": {
            "browsers": "chromium"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ocamllabs.ocaml-platform"
            ]
        }
    },
    "remoteUser": "vscode",
    "postCreateCommand": {
        "opam": "echo sudo sh -ceux \"chown -R $(id -u):$(id -g) ${OPAMROOT}/log\"",
        "submodules": "git submodule update --recursive --init --depth=1"
    },
    "waitFor": "postCreateCommand"
}
